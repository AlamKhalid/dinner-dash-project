<h2 class='text-center mb-4'>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
html: {class: ' d-flex flex-column align-items-center', novalidate: true}) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <div class='row w-50'>
    <div class='col-md-6 mb-3'>
      <%= f.label :full_name%>
      <%= f.text_field :full_name, autocomplete: 'fullname', autofocus: true, class: 'form-control', required: true %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :display_name%>
      <%= f.text_field :display_name, autocomplete: 'displayname', autofocus: true, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :email%>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: true %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: true %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: true  %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :phone_no %>
      <%= f.text_field :phone_no, autocomplete: 'phone', class: 'form-control' %>
    </div>
    <div class='col-md-12 mb-3'>
      <%= f.label :address %><br />
      <%= f.text_field :address, autocomplete: 'address', class: 'form-control'  %>
    </div>
  </div>
  <div class='actions'>
    <div class='row'>
      <div class='col-md-8 mb-3'>
        <%= f.submit 'Sign up', class: 'btn btn-dark align-self-start' %>
      </div>
    </div>
  </div>
  <%= render 'devise/shared/links' %>
<% end %>
