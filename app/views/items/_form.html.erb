<%= form_with model: [@restaurant, @item] do |f| %>
  <div class='row'>
    <div class='col-md-6 mb-3'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :retired %>
      <%= f.select :retired, options_for_select([['No', false],['Yes', true]]), {} ,class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :categories %>
      <%= f.select :category_ids, Category.all.collect {|c| [ c.name, c.id ] }, {},
        { multiple: true, size: 5, class: 'form-control'  } %>
    </div>
    <div class='col-md-6 mb-3'></div>
    <div class='col-md-6 mb-3'>
      <%= f.submit 'Submit', class: 'btn btn-dark'%>
    </div>
  </div>
<% end %>
<%= render 'common/back_btn' %>
