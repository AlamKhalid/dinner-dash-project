<%= form_with model: [@restaurant, @item], local: true do |f| %>
  <% if @item.errors.any? %>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='row'>
    <div class='col-md-6 mb-3'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :retired %>
      <%= f.select :retired, options_for_select([['No', false],['Yes', true]]), {} ,class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :categories %>
      <%= f.select :category_ids, Category.all.collect {|c| [ c.name, c.id ] }, {},
        { multiple: true, size: 5, class: 'form-control'  } %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.label :item_picture %>
      <%= f.file_field :item_picture, class: 'form-control' %>
    </div>
    <div class='col-md-6 mb-3'>
      <%= f.submit 'Submit', class: 'btn btn-dark'%>
    </div>
  </div>
<% end %>
<%= render 'common/back_btn' %>
