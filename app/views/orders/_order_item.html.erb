<h6><strong>Order ID:</strong> <%= @order.id %></h6>
<h6><strong>Order initiated at:</strong> <%= format_time(@order.created_at) %></h6>
<h6><strong>Order Status:</strong><em><%= @order.status.titleize %></em>, Last Modified at: <%= format_time(@order.updated_at) %></h6>
<h6><strong>Customer Name:</strong> <%= @order.user.full_name %></h6>
<h6><strong>Customer Email:</strong> <%= @order.user.email %></h6>
<h6><strong>Restaurant:</strong> <%= @order.restaurant.name %></h6>
<table class='mt-5 table table-hover'>
  <thead>
    <tr>
      <th scope='col'>ID</th>
      <th scope='col'>Item</th>
      <th scope='col'>Quantity</th>
      <th scope='col'>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @order.cart_order_items.each do |single_cart_order_item|%>
      <tr>
        <th scope='row'><%= single_cart_order_item.item.id %></th>
        <td><%= single_cart_order_item.item.name %></td>
        <td><%= single_cart_order_item.quantity %></td>
        <td>Rs. <%= single_cart_order_item.quantity.to_i * single_cart_order_item.item.price %></td>
        <td><%= link_to 'View Item', restaurant_item_path(single_cart_order_item.item.restaurant, single_cart_order_item.item), class: 'btn btn-dark'%></td>
      </tr>
    <% end %>
    <tr class='table-secondary'>
      <td></td>
      <td></td>
      <th>Total Price: </th>
      <th>Rs. <%= @order.total_price %></th>
      <td></td>
    </tr>
  </tbody>
</table>
<%= render 'common/back_btn' %>
