<h1 class='text-center'>Edit Order</h1>
<%= render 'order_item' %>
<%# Modify order details here %>
<h2 class="mt-3">Modify Order Status</h2>
<div class="row mt-3 ml-1">
  <% if @order.status_ordered? %>
    <%= link_to 'Mark as paid', order_path(@order, status: Order.statuses[:paid]), method: 'put', data: {confirm: 'Are you sure?'}, class: 'btn btn-primary mr-3' %>
  <% end %>
  <% if @order.status_paid? %>
   <%= link_to 'Mark as completed', order_path(@order, status: Order.statuses[:completed]), method: 'put', data: {confirm: 'Are you sure?'}, class: 'btn btn-success mr-3'%>
  <% end %>
  <% if @order.status_ordered? || @order.status_paid? %>
    <%= link_to 'Mark as Cancelled', order_path(@order, status: Order.statuses[:cancelled]), method: 'put', data: {confirm: 'Are you sure?'}, class: 'btn btn-danger mr-3'%>
  <% end %>
</div>
